    <style name="AppThemealt.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <style name="airtime_input_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:textSize">20sp</item>
    </style>



    <style name="airtime_input_style.amount">
        <item name="android:inputType">number</item>
        <item name="android:maxLength">9</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:hint">Enter Amount</item>
    </style>

    <style name="airtime_input_style.phone">
        <item name="android:inputType">number</item>
        <item name="android:maxLength">11</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:hint">Enter Phone Number</item>
    </style>

    <style name="edit_text_underline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?editTextColor</item>
        <!--<item name="android:layout_alignBottom">@id/amountTIL</item>-->
    </style>

    <style name="naira_drawable_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">bottom</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">22sp</item>
    </style>


    <style name="selectable_layout_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="selectable_layout_image">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@drawable/bordered_all</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:duplicateParentState">true</item>
    </style>

    <style name="selectable_layout_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/grey_font</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="selectable_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>


    <style name="subtitle_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:background">@drawable/bordered</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textSize">19sp</item>
    </style>


    <style name="default_button_style" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/login_button_bg</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="font">@font/titillium_web_bolder</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="EditTextTheme" parent="Theme.AppCompat.Light.DarkActionBar">         <item name="colorControlNormal">@color/colorPrimary</item>         <item name="colorControlActivated">@color/colorPrimary</item>         <item name="colorControlHighlight">@color/colorPrimary</item>         <item name="colorBackgroundFloating">@color/colorPrimary</item>    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="loginaltbtn">    <item name="android:layout_height">wrap_content</item>         <item name="android:background">@color/colorPrimary</item>         <item name="android:minHeight">55dp</item>         <item name="android:layout_marginTop">5dp</item>         <item name="android:layout_marginBottom">3dp</item>         <item name="android:textSize">18sp</item>    </style>

    <style name="keypad_style">      <item name="android:layout_width">110dp</item>         <item name="android:layout_height">match_parent</item>         <item name="android:background">@android:color/transparent</item>         <item name="android:textColor">#4a4a4a</item>         <item name="android:textSize">30sp</item>         <item name="android:fontFamily">@font/lato</item>     </style>

</resources>