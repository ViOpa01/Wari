<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".history_summary.TransactionsMenu">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:popupTheme="@style/AppThemealt.PopupOverlay"
        app:title="Transaction details"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@color/colorPrimary" />

    <Button
        android:id="@+id/btn_transaction_history"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Transaction History"

        android:textSize="20sp"
        android:elevation="0dp"
        android:textAllCaps="false"
        android:fontFamily="@font/lato_light"
        android:gravity="left|center_vertical"
        /> style="@style/btnstyleone"
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
         />
    android:background="@color/grey"
    <Button
        android:id="@+id/btn_transaction_summary"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Transaction Summary"
        android:textAllCaps="false"
        android:textSize="20sp"

        android:fontFamily="@font/lato_light"
        android:gravity="left|center_vertical"
        />  style="@style/btnstyleone"
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        />
    android:background="@color/grey"
</LinearLayout>