<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/conten_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/layout_title_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="32dp"
        android:layout_height="match_parent">

       <RelativeLayout
           android:layout_width="match_parent"
           android:id="@+id/lay1"
           android:padding="@dimen/activity_vertical_margin"
           android:layout_height="wrap_content">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/keyH1"
               android:textStyle="bold"
               android:textColor="@color/sbc_header_text"
               android:layout_centerHorizontal="true"
               android:gravity="center_horizontal"
               android:text="Component Key One"/>

           <TextView
               android:layout_width="match_parent"
               android:layout_below="@+id/keyH1"
               android:layout_height="wrap_content"
               android:gravity="center_horizontal"
               android:textColor="@color/black"
               android:layout_centerInParent="true"
               android:text="11111111111111111111111"
               android:id="@+id/massterKey"/>

       </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="@dimen/activity_vertical_margin"
            android:layout_centerInParent="true"
            android:layout_below="@+id/lay1"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/keyH2"
                android:textStyle="bold"
                android:textColor="@color/sbc_header_text"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:text="Component Key Two"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/keyH2"
                android:layout_centerInParent="true"
                android:id="@+id/comp2"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:text="00000000000000000000000000000000"
                />
        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text=""
        android:gravity="center_horizontal"/>

</LinearLayout>