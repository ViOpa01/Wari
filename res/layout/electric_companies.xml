<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/reportActivityTopBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_collapseMode="pin"
            app:title="Electricity Payment" />

    </android.support.design.widget.AppBarLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:orientation="vertical">
        <!--<LinearLayout-->
            <!--android:id="@+id/aedc"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="80dp"-->
            <!--android:layout_marginBottom="20dp"-->

            <!--&gt;-->

            <ImageButton
                android:id="@+id/aedc"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginBottom="20dp"
                android:gravity="center_horizontal"
                android:paddingStart="30dp"
                android:textSize="24dp"
                android:background="@color/white"
                android:textColor="#299A8E"
                android:paddingEnd="30dp"
                android:src="@drawable/aedc"
                android:drawablePadding="10dp" />
        <!--</LinearLayout>-->
        <!--android:text="EEDC"-->

        <ImageButton
            android:id="@+id/eedc"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="20dp"

                android:gravity="center_vertical"
                android:paddingStart="30dp"
                android:textSize="24dp"
                android:background="@color/white"
                android:textColor="#299A8E"
                android:paddingEnd="30dp"
                android:src="@drawable/eedc"
                android:drawablePadding="10dp"/>

        <ImageButton
            android:id="@+id/ekedc"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="20dp"

                android:text="EKEDC"
                android:gravity="center_vertical"
                android:paddingStart="30dp"
                android:textSize="24dp"
                android:background="@color/white"
                android:textColor="#299A8E"
                android:src="@drawable/ekedc"
                android:drawablePadding="10dp"
                android:paddingEnd="30dp"
                />

        <ImageButton

            android:id="@+id/ibedc"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="20dp"


                android:text="IBEDC"
                android:gravity="center_vertical"
                android:paddingStart="30dp"
                android:textSize="24dp"
                android:background="@color/white"
                android:drawablePadding="10dp"
                android:src="@drawable/ibedc"
                android:paddingEnd="30dp" />

        <ImageButton
            android:id="@+id/iedc"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="20dp"

                android:text="IKDC"
                android:gravity="center_vertical"
                android:paddingStart="30dp"
                android:textSize="24dp"
                android:background="@color/white"
                android:drawablePadding="10dp"
                android:src="@drawable/ikedc"
                android:paddingEnd="30dp" />


        <ImageButton
            android:id="@+id/phdc"
            android:layout_width="match_parent"
            android:layout_height="80dp"

                android:text="PHDC"
                android:gravity="center_vertical"
                android:paddingStart="30dp"
                android:textSize="24dp"
                android:background="@color/white"
                android:paddingEnd="30dp"
                android:src="@drawable/phdc"
                android:drawablePadding="10dp" />





        <LinearLayout
            android:id="@+id/beneficiaries"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Beneficiaries"
                android:visibility="invisible"
                android:gravity="center_vertical"
                android:paddingStart="30dp"
                android:textSize="24dp"
                android:textColor="#299A8E"
                android:drawablePadding="10dp"
                android:paddingEnd="30dp"/>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>

